{
    "name": "phpsandbox/cli",
    "description": "A CLI tool for PHPSandbox.",
    "keywords": ["phpsandbox", "console", "cli"],
    "homepage": "https://phpsandbox.io",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "PHPSandbox",
            "email": "hi@phpsandbox.io"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-curl": "*",
        "ext-json": "*",
        "composer/composer": "^2.5.0",
        "guzzlehttp/guzzle": "^7.7.0",
        "illuminate/http": "^10.9.0",
        "laminas/laminas-text": "^2.7",
        "laravel/prompts": "^0.1.6",
        "nelexa/zip": "^4.0",
        "padraic/phar-updater": "^1.0.6",
        "symfony/finder": "^6.0.0.1",
        "symfony/process": "^6.0.0"
    },
    "require-dev": {
        "laravel-zero/framework": "^10.0",
        "mockery/mockery": "^1.4.2",
        "phpunit/phpunit": "^10.3.0",
        "friendsofphp/php-cs-fixer": "^3.23.0",
        "ext-zip": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["builds/psb"],
    "scripts":{
        "fix-style":"export PHP_CS_FIXER_IGNORE_ENV=1 && php-cs-fixer fix --verbose"
    }
}
